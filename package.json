  "dependencies": {
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.9",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.0",
    "@types/socket.io": "^2.1.11",
    "bcryptjs": "^2.4.3",
    "config": "^3.2.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4",
    "path": "^0.12.7",
    "socket.io": "^4.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.6"
  },
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "server": "nodemon index.ts",
    "serverInstall": "yarn",
    "serverBuild": "npx tsc",
    "client": "yarn --cwd ./client start",
    "clientInstall": "yarn --cwd ./client/",
    "clientBuild": "yarn --cwd ./client/ build",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "devInstall": "yarn serverInstall && yarn clientInstall",
    "devUpgrade": "yarn upgrade && yarn --cwd ./client/ upgrade",
    "devBuild": "yarn serverBuild && yarn clientBuild",
    "heroku-postbuild": "yarn devInstall && yarn devBuild"
  },
  "repository": {
    "type": "git"
  }
}
