{
  "name": "listies",
  "version": "1.1.0",
  "main": "index.ts",
  "author": "Quinn",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.1.6",
    "nodemailer": "^6.7.1",
    "path": "^0.12.7",
    "socket.io": "^4.3.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^18.7.6",
    "@types/nodemailer": "^6.4.4",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  },
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "server": "nodemon index.ts",
    "serverInstall": "yarn",
    "serverBuild": "npx tsc",
    "client": "yarn --cwd ./client start",
    "clientInstall": "yarn --cwd ./client/",
    "clientBuild": "yarn --cwd ./client/ build",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "devInstall": "yarn serverInstall && yarn clientInstall",
    "devUpgrade": "yarn upgrade && yarn --cwd ./client/ upgrade",
    "devBuild": "yarn serverBuild && yarn clientBuild",
    "heroku-postbuild": "yarn devInstall && yarn devBuild",
    "format": "npx prettier --write  {,*/**/}*.{ts,tsx,js,json}"
  },
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": "^18",
    "yarn": "^1.22"
  }
}
